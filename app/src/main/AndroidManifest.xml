<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moutamid.placesbeen">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".onboard.AppContext"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlacesBeen">
        <activity
            android:name=".activities.saved.SavedListsActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.home.HomeActivity"
            android:exported="true">
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.maps.MapsActivity"
            android:exported="true"
            android:label="@string/title_activity_maps"></activity>
        <activity
            android:name=".activities.place.PlaceItemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.RegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".activities.home.MainActivity"
            android:exported="true" />
        <activity
            android:name=".onboard.OnBoardingActivity"
            android:exported="true" />
        <activity
            android:name=".onboard.SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>