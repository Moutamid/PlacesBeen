<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Hi traveller!"
                android:textColor="@color/darkerGrey" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/test" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where do\nyou want to "
                android:textColor="@color/darkBlackSpotify"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="go"
                android:textColor="@color/yellow"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="\?"
                android:textColor="@color/darkBlackSpotify"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.ldt.springback.view.SpringBackLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:scrollOrientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/optionContinent"
                        style="@style/options_main">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="Continents" />

                        <View
                            android:id="@+id/dotContinent"
                            style="@style/options_dot_main" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionCountry"
                        style="@style/options_main">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="Countries" />

                        <View
                            android:id="@+id/dotCountry"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionStates"
                        style="@style/options_main">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="States" />

                        <View
                            android:id="@+id/dotStates"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionCity"
                        style="@style/options_main">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="Cities" />

                        <View
                            android:id="@+id/dotCity"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionCulturalSites"
                        style="@style/options_main">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="Cultural Sites" />

                        <View
                            android:id="@+id/dotCulturalSites"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionNationalParks"
                        style="@style/options_main"
                        android:layout_marginEnd="20dp">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="National Parks" />

                        <View
                            android:id="@+id/dotNationalParks"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optionAirports"
                        style="@style/options_main"
                        android:layout_marginEnd="20dp">

                        <TextView
                            style="@style/options_txt_main"
                            android:text="Airports" />

                        <View
                            android:id="@+id/dotAirports"
                            style="@style/options_dot_main"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </com.ldt.springback.view.SpringBackLayout>

        <com.ldt.springback.view.SpringBackLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:scrollOrientation="vertical">

            <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                android:id="@+id/mainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_demo_angle="20"
                app:shimmer_demo_child_count="20"
                app:shimmer_demo_layout="@layout/layout_demo_grid"
                app:shimmer_demo_layout_manager_type="linear_vertical"
                tools:listitem="@layout/layout_demo_grid" />

        </com.ldt.springback.view.SpringBackLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_navigation_main"
        android:paddingTop="50dp"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_selected_home_24" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_charts_unselected_24" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_unsave_24" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile_24" />

    </LinearLayout>

</RelativeLayout>