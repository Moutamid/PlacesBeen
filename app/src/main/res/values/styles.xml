<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="options_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="options_txt_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#b1b1b1</item>
    </style>

    <style name="options_dot_main">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/bg_dot_main</item>
    </style>
</resources>